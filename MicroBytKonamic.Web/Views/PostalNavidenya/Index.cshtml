@model NuevaPostalViewModel

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    var title = "Postal navideña";

    ViewData["Title"] = title;
}

<h1 class="page-title">@title</h1>

<div class="container">
    <div class="row">
        <fieldset class="border rounded-3 p-3">
            <legend class="float-none w-auto px-3">Nueva felicitación</legend>
            <form method="post" asp-action="nuevaFelicitacion" class="manage-post-form">
                @Html.AntiForgeryToken()
                <input type="hidden" name="Fecha" id="fecha" />
                <div class="form-group">
                    <label asp-for="Nick"></label>
                    <span asp-validation-for="Nick"></span>
                    <input asp-for="Nick" class="form-control" placeholder="Introduce tu nick" />
                </div>
                <div class="form-group">
                    <label asp-for="Felicitacion"></label>
                    <span asp-validation-for="Felicitacion"></span>
                    <textarea asp-for="Felicitacion" class="form-control" placeholder="Escribe tu felicitación"></textarea>
                </div>
                <div class="form-group">
                    <input type="submit" value="Añadir felicitación y mostrar postal navideña" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </fieldset>
    </div>
    <div class="row">
        <a asp-action="VerPostalNavidenya" class="btn btn-outline-secondary btn-lg">Mostrar postal navideña</a>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jQuery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#fecha").val(new Date().toUTCString());
        });
    </script>
}
